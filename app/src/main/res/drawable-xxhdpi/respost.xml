<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E6E6EF" />
            <gradient android:angle="-90" android:startColor="#E6E6EF" android:endColor="#E6E6EF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E6E6EF" />
            <solid android:color="#E6E6EF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C6D6EF" />
            <gradient android:angle="90" android:startColor="#C6D6EF" android:endColor="#C6D6EF" />
        </shape>
    </item>
</selector>